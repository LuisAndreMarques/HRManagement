@model IEnumerable<Epifania.Core.Models.EventType>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutBackend/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsSingleEvent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsMultipleDayEvent)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsSingleEvent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsMultipleDayEvent)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EventTypeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EventTypeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EventTypeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
